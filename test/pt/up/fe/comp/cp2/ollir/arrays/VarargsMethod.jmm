class VarargsMethod {
    public int sum(int... numbers) {
        int result;
        int i;

        result = 0;
        i = 0;

        while (i < numbers.length) {
            result = result + numbers[i];
            i = i + 1;
        }

        return result;
    }

    public static void main(String[] args) {
        VarargsMethod vm;
        int result;

        vm = new VarargsMethod();
        result = vm.sum(1, 2, 3, 4, 5);
    }
}